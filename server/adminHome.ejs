<!DOCTYPE html>
    <html>
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <title>Admin Home</title>
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
            <style>
                body{
                  background-color: #eee;
                  color: #222;
                }
                #logoutButton{
                    display: flex;
                    justify-content: flex-end;
                    align-items: flex-end;
                    padding-right: 150px;
                    padding-top: 20px;
                }
                button{
                    border: 2px solid #111;
                    transition-duration: 0.5s;
                }
            </style>
        </head>

    <body>
        <div class = "nav-item" id = "logoutButton" >
            <a class = "nav-link" href = '/logout'>
                Logout
            </a>
        </div>
        <div class = 'container pt-5 pb-5'>
            <h2>China Taste 2 Manager</h2>
            <a href = "./adminAdd" type="button" class="btn btn-primary">Add</a>
                <table class="table table-striped table-hover">
                    <thead class = "thead-dark">
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Email</th>
                        <th scope="col">Position</th>
                        <th scope="col">Rate</th>
                        <th scope="col">Action</th>

                    </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user){ %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.firstName %></td>
                                <td><%= user.lastName %></td>
                                <td><%= user.email %></td>
                                <td><%= user.position %></td>
                                <td><%= user.rating %></td>
                                <td>
                                    <a href="edit/<%= user.id %>" class="bi bi-pencil-square"> Edit</a>
                                    <a href="delete/<%= user.id %>" class="bi bi-trash3"> Delete</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

    </html>
